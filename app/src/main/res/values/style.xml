<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/app_name_text_size</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="AdviseId">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/advice_id_text_size</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
    </style>

    <style name="AdviseText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/advice_text_text_size</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:padding">@dimen/padding_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>